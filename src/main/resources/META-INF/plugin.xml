<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.raschild6.momentumplugin</id>
    <name>momentum</name>
    <vendor>raschild6</vendor>

    <description>
        This plugin integrates a real-time code change listener for IntelliJ-based IDEs.
        It monitors document changes within the project and triggers custom code analysis after each modification.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.raschild6.momentumplugin.toolWindow.CodeQualityToolWindowFactory"
                id="CodeQualityToolWindowFactory"
                anchor="bottom"/>
    </extensions>

    <applicationListeners>
        <listener
                class="com.github.raschild6.momentumplugin.listeners.CodeChangeListener"
                topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

</idea-plugin>
